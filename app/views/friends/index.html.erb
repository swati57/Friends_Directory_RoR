<% if user_signed_in? %>
<table class="table table-striped table-hover table-bordered">
  <thead class="thead-dark">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Twitter</th>
  </tr>
  </thead>

  <tbody>
  <div id="friends">
  <% @friends.each do |friend| %>
    <% if friend.user == current_user %>
    <tr>
      <td><%= link_to friend.first_name + ' ' + friend.last_name ,friend %></td>
      <td><%= friend.email %></td>
      <td><%= friend.phone %></td>
      <td><%= friend.twitter %></td>
      <td><%= button_to "Delete", friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
      
    </tr>
    <% end %>
  <% end %>
  </div>
  </tbody>
</table>


<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
<% else %>
<h1>Hello world</h1><br>
<h2>This is the first page</h2>
<% end %>
