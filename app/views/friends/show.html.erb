<style>
        .jumbotron {
          background-color:#dddddc;
          margin: 10px!important;
          padding:30px;
          border-radius:10px;
        }
    </style>
<div class="jumbotron" >
  <br>
  <h1 class="display-4">
  <%= @friend.first_name %>
  <%= @friend.last_name %>
  </h1>

  <p class="lead">
  <%= @friend.email %> | 
  <%= @friend.phone %> | 
  <%= @friend.twitter %>
  </p>

  <hr class="my-4">
  <p class="lead">
  <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-secondary" %>
  <%= button_to "Delete", @friend, method: :delete,  class: "btn btn-danger" %>
  <br>
  </p>
</div>

<div>
<br>
  <%= link_to "Back", friends_path, class:"btn btn-dark"  %>
  <br>
</div>



